#!/usr/bin/perl

use warnings;
use strict;

use Midnight::Game;

use IO::Prompt;
require Text::Wrap;

sub say (@) {
    local $Text::Wrap::columns;
    $Text::Wrap::columns = 80;

    print Text::Wrap::wrap('', '', @_), "\n";
}

my $game = Midnight::Game->new;
my $map = $game->get_map;

my $character = $game->LUXOR;

my $looking = $map->get_looking_towards($character->get_location, $character->get_direction);

say $character;
say "He stands at " . $character->get_location . " looking " . $character->get_direction . " at " . $looking;

